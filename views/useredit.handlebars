<h1>Editando: {{user.name}}</h1>
<form action="/users/update" method="POST" class="form">
  <input type="hidden" name="id" value="{{user.id}}">
  <div class="form-control">
    <label for="name">Nome</label>
    <input type="text" name="name" placeholder="Digite o nome do usuário" value="{{user.name}}">
  </div>
  <div class="form-control">
    <label for="occupation">Profissão</label>
    <input type="text" name="occupation" placeholder="Digite a profissão" value="{{user.occupation}}">
  </div>
  <div class="form-control form check-box">
    <label for="newsletter">Enviar promoções?</label> 
    {{#if user.newsletter}}
      <input type="checkbox" name="newsletter" checked>  
    {{else }}
      <input type="checkbox" name="newsletter"> 
    {{/if}}
  </div>
  <input type="submit" value="Atualizar">
</form>
<div class="address-container">
  <h2>Endereços:</h2>
  <form action="/address/create" method="POST">
    <input type="hidden" name="UserId" value="{{user.id}}">
    <div class="form-control">
      <label for="rua">Rua</label>
      <input type="text" name="rua" placeholder="Digite a rua" >
      <label for="numero">Número</label>
      <input type="text" name="numero" placeholder="Digite o numero" >
      <label for="cidade">Cidade</label>
      <input type="text" name="cidade" placeholder="Digite a cidade" >
    </div>
    <input type="submit" value="Incluir endereço">
  </form>
  <div class="address-list">
    <h2>Lista de endereços</h2>
    {{#each user.Addresses}}
  <div>
    {{this.street}} - {{this.number}} - {{this.city}}
    <form action="/address/delete" method="POST">
      <input type="hidden" name="UserId" value="{{this.UserId}}">
      <input type="hidden" name="id" value="{{this.id}}">
      <input type="submit" value="Excluir">
    </form>
  </div>
    {{/each}}
  </div>
</div>